{% block scripts %}
<script>
    (function (global) {

        var cont = $('#flm_popup_nfo_view-content pre');

        function getNfo(selection, mode) {

            return flm.api.getNfo(selection, mode).then(
                function (data) {
                    cont.empty();

                    if (browser.isIE) {
                        document.getElementById("nfo_content").innerHTML = "<pre>" + data.nfo + "</pre>";
                    } else {
                        cont.html(data.nfo);
                    }

                },
                function (reason) {
                    cont.text('Failed fetching .nfo data');
                    log(reason);
                }
            );
        }

        $("#fMan_nfoformat").change(function () {
            var mode = $(this).val();
            getNfo($('#flm-diag-navigation-path').val(), mode);
        });

        getNfo($('#flm-diag-navigation-path').val(), $('#fMan_nfoformat').val());
    })
    (window);
</script>
{% endblock %}

